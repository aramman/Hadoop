add_peer '1', CLUSTER_KEY => 'd1.aus.cloudera.site,d2.aus.cloudera.site,d3.aus.cloudera.site:2181:/hbase'
disable_peer("1")
enable_table_replication 'emp'
enable_table_replication 'emp1'

hbase snapshot create -n emp1_4aug -t emp1

hbase org.apache.hadoop.hbase.snapshot.ExportSnapshot -snapshot emp1_4aug -copy-to hdfs://d2.aus.cloudera.site:8020/hbase -mappers 2

enable_peer("1")


# The above steps are to be used when the soruce cluster already has data/tables.
# In a new cluster with no data, we do not need to export snapshot and disable_peer (To build backlog for WALs)
